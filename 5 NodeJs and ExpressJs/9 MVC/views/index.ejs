<%- include('partials/head') %>
</head>
<body class="min-h-screen bg-gray-100">
  <%- include('partials/nav') %>
  <main class="py-12 px-4">
    <div class="container mx-auto max-w-7xl">
      <h1 class="text-6xl font-bold text-blue-700 mb-16 text-center tracking-tight">Welcome to Hamara airbnb</h1>
      <div class="max-w-5xl mx-auto">
        <ul class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          <% homes.forEach(home => { %>
            <li class="bg-white shadow-lg rounded-2xl p-6 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
              <div class="flex flex-col h-full">
                <div class="relative w-full h-48 mb-4">
                  <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-full object-cover rounded-lg">
                </div>
                <div class="flex flex-col flex-grow">
                  <h2 class="text-xl font-semibold text-gray-900 mb-2"><%= home.houseName %></h2>
                  <p class="text-gray-600 mb-2 flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                    </svg>
                    <%= home.location %>
                  </p>
                  <div class="flex items-center mb-2">
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                    <span class="ml-1 text-gray-600"><%= home.rating %>/5</span>
                  </div>
                  <div class="mt-auto">
                    <span class="text-lg font-bold text-blue-600">$<%= home.price %></span>
                    <span class="text-gray-500 text-sm">/night</span>
                  </div>
                </div>
              </div>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </main>
</body>
</html>